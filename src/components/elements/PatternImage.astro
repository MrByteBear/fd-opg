---
import { Image } from "astro:assets";
const { variant, isSwapped, patternImg, sectionImg, sectionAltTxt, dynamicData=[]} = Astro.props;
import DynamicImage from "@components/helpers/DynamicImage.astro";
---

{ variant === "dynamic" ? (
  <figure class={isSwapped === "true" ? "swappedFigure" : ""}>
  <Image src={patternImg} alt="pattern image" />
  {dynamicData.map((data: any) => (
    <DynamicImage imagePath={data.img} altText={data.name} inferImgSize={true}/>
  ))}
</figure>
) : (
  <figure class={isSwapped === "true" ? "swappedFigure" : ""}>
  <Image src={patternImg} alt="pattern image" />
  <Image src={sectionImg} alt={sectionAltTxt || "section image"}/>
</figure>
)
}


<style>
  @layer components {
    figure {
      display: grid;
      position: relative;

      > * {
        grid-area: 1 / 1;
      }

      > :first-child {
        z-index: -2;
        margin-left: calc(var(--space-2xl) * -1);
      }
      > :last-child {
        border-radius: var(--radius-m);
        margin-block-start: var(--space-xl);
      }
      &::before {
        --object-size: clamp(2.813rem, 0rem + 14.063vw, 11.25rem);
        content: "";
        position: absolute;
        aspect-ratio: 1;
        top: calc(0% + var(--space-xl) / 2);
        left: calc(0% - var(--space-xl) / 1.5);
        width: var(--object-size);
        background-color: var(--color-accent-alt);
        border-radius: var(--radius-m);
        z-index: -1;
      }
    }

    .swappedFigure {
      order: 2;
      margin-inline-end: var(--space-2xl);
      > :first-child {
        margin-left: 0;
        margin-right: calc(var(--space-2xl) * -1);
        justify-self: end;
      }
      &::before {
        left: auto;
        right: calc(0% - var(--space-xl) / 1.5);
      }
    }
  }

  @media screen and (max-width: 1200px) {
    @layer overrides {
    figure {
      >:first-child {
        display: none;
      }

      >:last-child {
        margin: 0;
      }
      &::before {
        display: none;
      }
    }

    .swappedFigure {
      margin-inline-end: unset;
    }
    }
  }

  @media screen and (max-width: 768px) {
    figure {
      display: block;
      grid-template-rows: unset;

      >:last-child {
        width: 100%;
      }
    }
    .swappedFigure {
      order: unset;
    }

  }

</style>
